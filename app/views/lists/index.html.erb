<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80); padding: 150px 0">
  <div class="container">
    <h1>Add <strong>bookmarks</strong> to your <strong>favorite</strong> movies</h1>
    <p>MovieFlix the best app to keep track of your watch list.</p>
  </div>
</div>


<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My lists</h2>
    <%= link_to "Add a list", new_list_path, class: "btn btn-primary" %>
  </div>

  <main class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-lg-4">
        <%= link_to list_path(list), class:"list-link" do %>
          <article class="d-flex align-items-end" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.3)), url(<%= list.image_url %>);">
          <h2><%= list.name %></h2>
          </article>
        <% end %>
      </div>
    <% end %>
  </main>
</div>
