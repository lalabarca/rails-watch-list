<div class="container">
  <h1>My lists</h1>
  <%= link_to "Add a list", new_list_path %>

  <main class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-lg-3">
        <article>
          <h2><%= link_to list.name, list_path(list) %></h2>
        </article>
      </div>
    <% end %>
  </main>
</div>
